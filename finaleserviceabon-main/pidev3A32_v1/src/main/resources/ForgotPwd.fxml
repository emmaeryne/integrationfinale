<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="719.0" prefWidth="457.0" style="-fx-background-color: #1A2526;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.emmapi.controllers.ForgotPwd">
    <children>
        <!-- Image de fond -->
        <ImageView fitHeight="719.0" fitWidth="457.0" opacity="0.2">
            <image>
                <Image url="@sports-high-resolution-desktop-backgrounds-wallpaper-preview.jpg" />
            </image>
        </ImageView>

        <!-- Contenu principal -->
        <VBox alignment="CENTER" prefHeight="719.0" prefWidth="457.0" spacing="20" style="-fx-background-color: rgba(42, 59, 66, 0.8); -fx-border-radius: 10; -fx-background-radius: 10;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Logo -->
            <ImageView fitHeight="93.0" fitWidth="146.0" preserveRatio="true">
                <image>
                    <Image url="@assets/67c63149b70ee60009745eef.png" />
                </image>
            </ImageView>

            <!-- Titre -->
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF; -fx-font-family: 'Arial';" text="Mot de passe oublié" />

            <!-- Champs de saisie -->
            <VBox alignment="CENTER" spacing="25.0" prefWidth="250.0">
                <children>
                    <TextField fx:id="email" prefHeight="35.0" prefWidth="250.0" promptText="Email" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-border-color: #66C2D9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                    <ComboBox fx:id="SelectQ" prefHeight="35.0" prefWidth="250.0" promptText="Sélectionner une question" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-border-color: #66C2D9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                    <TextField fx:id="Answer" prefHeight="35.0" prefWidth="250.0" promptText="Réponse" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-border-color: #66C2D9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                    <Button fx:id="Procceed" mnemonicParsing="false" onAction="#ProcceedOnClick" prefHeight="35.0" prefWidth="250.0" style="-fx-background-color: #FF7043; -fx-text-fill: #FFFFFF; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10 20;" text="Avancer" />
                </children>
            </VBox>

            <!-- Bouton Retour -->
            <Button fx:id="Back" mnemonicParsing="false" onAction="#BackOnClick" prefHeight="35.0" prefWidth="250.0" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10 20;" text="Retour" />

            <!-- Pied de page -->
            <Label style="-fx-font-size: 12px; -fx-text-fill: #B0BEC5;" text="© 2025 HIVE" />
        </VBox>
    </children>
</AnchorPane>