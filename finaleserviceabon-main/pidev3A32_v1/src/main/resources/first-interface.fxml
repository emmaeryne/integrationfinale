<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: linear-gradient(to bottom right, #1a2526, #263238);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.emmapi.controllers.firstInterface">
    <children>
        <!-- Image de fond -->
        <ImageView fitHeight="1080.0" fitWidth="1920.0" opacity="0.08">
            <image>
                <Image url="@sports-high-resolution-desktop-backgrounds-wallpaper-preview.jpg" />
            </image>
        </ImageView>

        <!-- AnchorPane contenant le contenu -->
        <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0">
            <children>
                <!-- Contenu principal -->
                <VBox alignment="CENTER" maxWidth="420.0" spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.05); -fx-background-radius: 18;                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.7), 25, 0.3, 0, 6);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="32.5" AnchorPane.rightAnchor="32.5" AnchorPane.topAnchor="0.0">
                    <padding>
                        <Insets bottom="40" left="35" right="35" top="40" />
                    </padding>
                    <ImageView fitHeight="161.0" fitWidth="203.0">
                        <image>
                            <Image url="@hjk-removebg-preview.png" />
                        </image>
                    </ImageView>

                    <!-- Titre principal -->
                    <Text fx:id="title" fill="#FFFFFF" style="-fx-font-size: 28px; -fx-font-family: 'Segoe UI Semibold'; -fx-font-weight: normal;" text="Bienvenue sur HIVE" />

                    <!-- Boutons d'inscription -->
                    <Button fx:id="ClientButton1" mnemonicParsing="false" onAction="#sinscrireCoach" prefHeight="68.0" prefWidth="252.0" style="-fx-background-color: linear-gradient(to right, #00ACC1, #00838F);                                    -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;                                    -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10 20;                                    -fx-font-family: 'Segoe UI';" text="S'inscrire en tant que Coach" />
                    <Button fx:id="ClientButton" mnemonicParsing="false" onAction="#sinscrireUser" prefHeight="63.0" prefWidth="263.0" style="-fx-background-color: linear-gradient(to right, #00ACC1, #00838F);                                    -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;                                    -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10 20;                                    -fx-font-family: 'Segoe UI';" text="S'inscrire en tant que Client" />
                    <Button fx:id="ownerButton" mnemonicParsing="false" onAction="#sinscrireOwner" prefHeight="62.0" prefWidth="263.0" style="-fx-background-color: linear-gradient(to right, #00ACC1, #00838F);                                    -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;                                    -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10 20;                                    -fx-font-family: 'Segoe UI';" text="S'inscrire en tant que Propriétaire" />
                    <Button fx:id="adminButton" mnemonicParsing="false" onAction="#back" prefHeight="54.0" prefWidth="125.0" style="-fx-background-color: transparent; -fx-border-color: #66C2D9;                                    -fx-text-fill: #66C2D9; -fx-font-size: 14px; -fx-font-weight: bold;                                    -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8 15;                                    -fx-font-family: 'Segoe UI';" text="Login" />

                    <!-- Pied de page -->
                    <Text fill="#90A4AE" style="-fx-font-size: 11px; -fx-font-family: 'Segoe UI';" text="© 2025 HIVE" />
                </VBox>
            </children>
        </AnchorPane>
    </children>
</StackPane>
