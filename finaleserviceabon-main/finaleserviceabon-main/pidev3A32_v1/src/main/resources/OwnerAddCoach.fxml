<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" prefHeight="800.0" prefWidth="600.0" style="-fx-background-color: #1A2526;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.emmapi.controllers.OwnerAddCoach">
    <content>
        <AnchorPane prefHeight="800.0" prefWidth="600.0">
            <!-- Image de fond -->
            <children>
                <ImageView fitHeight="800.0" fitWidth="600.0" opacity="0.2">
                    <image>
                        <Image url="@sports-high-resolution-desktop-backgrounds-wallpaper-preview.jpg" />
                    </image>
                </ImageView>

                <!-- Contenu principal -->
                <VBox alignment="CENTER" layoutY="86.0" prefHeight="800.0" prefWidth="600.0" spacing="20" style="-fx-background-color: rgba(42, 59, 66, 0.8); -fx-border-radius: 10; -fx-background-radius: 10;">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <!-- En-tête avec logo -->
                    <HBox alignment="CENTER" spacing="10">
                        <ImageView fitHeight="62.0" fitWidth="128.0">
                            <image>
                                <Image url="@hjk-removebg-preview.png" />
                            </image>
                        </ImageView>
                    </HBox>
                    <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF; -fx-font-family: 'Arial';" text="Ajout d'un Coach" />

                    <!-- Formulaire -->
                    <VBox alignment="CENTER" prefWidth="400.0" spacing="15">
                        <TextField fx:id="usernameField" prefHeight="35.0" prefWidth="400.0" promptText="Nom d'utilisateur" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-border-color: #66C2D9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        <Label fx:id="usernameErrorLabel" style="-fx-text-fill: #FF7043; -fx-font-size: 12px;" />

                        <TextField fx:id="emailField" prefHeight="35.0" prefWidth="400.0" promptText="Email" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-border-color: #66C2D9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        <Label fx:id="emailErrorLabel" style="-fx-text-fill: #FF7043; -fx-font-size: 12px;" />

                        <TextField fx:id="passwordField" prefHeight="35.0" prefWidth="400.0" promptText="Mot de passe" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-border-color: #66C2D9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        <Label fx:id="passwordErrorLabel" style="-fx-text-fill: #FF7043; -fx-font-size: 12px;" />

                        <TextField fx:id="password2Field" prefHeight="35.0" prefWidth="400.0" promptText="Confirmer mot de passe" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-border-color: #66C2D9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        <Label fx:id="password2ErrorLabel" style="-fx-text-fill: #FF7043; -fx-font-size: 12px;" />

                        <TextField fx:id="phoneNumberField" prefHeight="35.0" prefWidth="400.0" promptText="Numéro de téléphone" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-border-color: #66C2D9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        <Label fx:id="phoneNumberErrorLabel" style="-fx-text-fill: #FF7043; -fx-font-size: 12px;" />

                        <TextField fx:id="specialityField" prefHeight="35.0" prefWidth="400.0" promptText="Spécialité" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-border-color: #66C2D9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        <Label fx:id="specialityErrorLabel" style="-fx-text-fill: #FF7043; -fx-font-size: 12px;" />

                        <TextField fx:id="yearOfExperienceField" prefHeight="35.0" prefWidth="400.0" promptText="Années d'expérience" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-border-color: #66C2D9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        <Label fx:id="yearOfExperienceErrorLabel" style="-fx-text-fill: #FF7043; -fx-font-size: 12px;" />

                        <TextField fx:id="CertificationField" prefHeight="35.0" prefWidth="400.0" promptText="Certification" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-border-color: #66C2D9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        <Label fx:id="certificationErrorLabel" style="-fx-text-fill: #FF7043; -fx-font-size: 12px;" />

                        <ComboBox fx:id="SelectQ" prefHeight="35.0" prefWidth="400.0" promptText="Sélectionner une question" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-border-color: #66C2D9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        <TextField fx:id="Answer" prefHeight="35.0" prefWidth="400.0" promptText="Réponse" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-border-color: #66C2D9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                    </VBox>

                    <!-- Boutons -->
                    <HBox alignment="CENTER" spacing="20">
                        <Button fx:id="ajouterCoach" onAction="#ajouterCoach" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #FF7043; -fx-text-fill: #FFFFFF; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 8; -fx-background-radius: 8;" text="Ajouter">
                            <padding>
                                <Insets bottom="10" left="20" right="20" top="10" />
                            </padding>
                        </Button>
                        <Button onAction="#loginBack" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #3B4252; -fx-text-fill: #FFFFFF; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 8; -fx-background-radius: 8;" text="Connexion">
                            <padding>
                                <Insets bottom="10" left="20" right="20" top="10" />
                            </padding>
                        </Button>
                    </HBox>

                    <!-- Pied de page -->
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #B0BEC5;" text="© 2025 - Ajout de Coach" />
                </VBox>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>
