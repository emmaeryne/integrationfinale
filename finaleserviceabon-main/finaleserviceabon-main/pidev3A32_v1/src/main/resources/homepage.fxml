<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #1A2526;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.emmapi.controllers.HomePageController">
    <!-- Image de fond -->
    <children>
        <ImageView fitHeight="500.0" fitWidth="700.0" opacity="0.2">
            <image>
                <Image url="@sports-high-resolution-desktop-backgrounds-wallpaper-preview.jpg" /> <!-- Remplacez par une image de fond (ex. gym, terrain de sport) -->
            </image>
        </ImageView>

        <!-- Contenu principal -->
        <VBox prefHeight="500.0" prefWidth="700.0" spacing="20" alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- En-tête avec logo -->
            <HBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="50.0" fitWidth="50.0">
                    <image>
                        <Image url="@hjk-removebg-preview.png" /> <!-- Remplacez par un logo sportif (ex. haltères, silhouette athlétique) -->
                    </image>
                </ImageView>
                <Label text="Tableau de Bord Sportif" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF; -fx-font-family: 'Arial';" />
            </HBox>

            <!-- Liens de navigation -->
            <VBox spacing="15" alignment="CENTER" style="-fx-background-color: rgba(42, 59, 66, 0.8); -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">

                <Hyperlink fx:id="abonnementid" text="Abonnements" onAction="#openAbonnementDashboard" style="-fx-text-fill: #66C2D9; -fx-font-size: 18px; -fx-font-weight: bold;" />
                <Hyperlink fx:id="courslab" text="Cours" onAction="#openCoursDashboard" style="-fx-text-fill: #66C2D9; -fx-font-size: 18px; -fx-font-weight: bold;" />

                <Hyperlink fx:id="participantlab" text="Participants" onAction="#openParticipantsDashboard" style="-fx-text-fill: #66C2D9; -fx-font-size: 18px; -fx-font-weight: bold;" />
                <Hyperlink fx:id="planninglab" text="Planning" onAction="#openPlanningDashboard" style="-fx-text-fill: #66C2D9; -fx-font-size: 18px; -fx-font-weight: bold;" />
                <Hyperlink fx:id="serviceView" text="Vue Services" onAction="#openServiceDashboard2" style="-fx-text-fill: #66C2D9; -fx-font-size: 18px; -fx-font-weight: bold;" />
                <Hyperlink fx:id="abonnementView" text="Vue Abonnements" onAction="#openTypeDashboard2" style="-fx-text-fill: #66C2D9; -fx-font-size: 18px; -fx-font-weight: bold;" />
            </VBox>

            <!-- Boutons d'actions -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Rafraîchir" onAction="#refreshDashboard" style="-fx-background-color: #FF7043; -fx-text-fill: #FFFFFF; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10 20;" />
                <Button text="Fermer Tout" onAction="#closeAllDashboards" style="-fx-background-color: #D32F2F; -fx-text-fill: #FFFFFF; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10 20;" />
            </HBox>

            <!-- Pied de page -->
            <Label text="© 2025 Fitness Pro - Gestion Sportive" style="-fx-font-size: 12px; -fx-text-fill: #B0BEC5;" />
        </VBox>
    </children>
</AnchorPane>